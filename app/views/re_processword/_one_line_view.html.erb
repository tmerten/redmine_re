<div class="one_line_view">
	<p><table>
		<tbody>
			<tr>
				
				<%= render :partial => "re_artifact_properties/shared_fields_one_line_representation", :locals => {:artifact => artifact}%>

				<% for column in ReProcessword.content_columns %>
					<% value = artifact.artifact.send(column.name)%>
					<% unless value.nil? or value == '' %>
			        	<td>
			              	<label class='filter'><%= l('re_processword_' + column.name) + ": " %></label>
							<%= value %>
			            </td>  
					<% end %>
		        <% end %>
				
				<!-- Add Building Block One Line Representation --> 
				<%= insert_building_blocks_one_line_representations(artifact) %>
	          	
			</tr>
		</tbody>
	</table></p>
</div>
